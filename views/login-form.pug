extends layout 

block content 
    div.login_form_form_container
        h1.login_form_title= title 
        form(method='POST' action='').login_form_main
          div.login_form_group_username
            label(for='username') Username: 
            input#username(type='text' name='username' minlength='4' maxlength='20' required='true')
          div.login_form_group_password
            label(for='password') Password: 
            input#password(type='password' name='password' minlength='6' required='true')
        
          button.login_form_button(type="submit") Log In
        

        if errors
          ul.error_field
            for error in errors
              li!= error