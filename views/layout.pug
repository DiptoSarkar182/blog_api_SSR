doctype html
html
  head
    title.layout_title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.layout_nav
      a.layout_a(href="/").header Movie Blogs
      if currentUser
        ul.layout_ul
          li.layout_greeting Hello, #{currentUser.username}
          li.layout_create_blog
            a(href="/create-blog") Create blog
          li.layout_my_account
              a(href="/my-account") My Account
          li.layout_logout
            a(href="/logout").logout Logout

      else 
        ul 
          li.layout_login
            a(href="/login") Log in
          li.layout_signup
            a(href="/sign-up") Sign up
          li.layout_signup
            a(href="/demo-user") Demo User
        
    block content